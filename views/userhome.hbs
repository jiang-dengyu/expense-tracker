<div class="mx-auto" style="max-width: 800px;">
  {{>categories}}
  <br>    
  <div class="p-3 text-primary-emphasis border border-success-subtle rounded-3">
    目前總共支出：{{totalPrice}}
  </div>
  <br>

  <table class="table table-striped table-hover align-middle text-center">
    <thead class="thead-dark">
      <tr>
        <th scope="col">類別</th>
        <th scope="col">日期</th>
        <th scope="col">項目</th>
        <th scope="col">價格</th>
        <th scope="col"></th>
      </tr>
    </thead>
    
    <tbody>
      {{#each lists}}
      <tr>
        <td>
          <i class="{{this.Category.img}}" style="flex: 1;"></i>
          <span style="flex: 1;">{{this.Category.name}}</span>
        </td>
        <td>{{this.date}}</td>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/edit/{{ this.id }}">
              <button type="button"class="btn btn-warning btn-block">Edit</button>
            </a>
          </button>
          <form action="/delete/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger"
              onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="container-fluid  d-flex justify-content-center">
    <a class="btn btn-link link-primary" href="/create">
      <button class="btn btn-secondary btn-block">新增支出</button>
    </a>
  </div>

</div>